{
	"buildCommand": "pnpm build",
	"outputDirectory": "dist",
	"installCommand": "pnpm install",
	"framework": "astro",
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		},
		{
			"source": "/_astro/(.*)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		}
	],
	"cleanUrls": true,
	"redirects": [
		{
			"source": "/posts/20240608/fl-tips-1",
			"destination": "https://monlark.top/posts/fl-tips/colorful-notes/",
			"permanent": true
		},
		{
			"source": "/posts/20230701001/",
			"destination": "https://monlark.top/posts/touhou-bgm-format/",
			"permanent": true
		}
	]
}
